@inherits LayoutComponentBase
@inject IStringLocalizer<ClientResources> Loc
@inject HttpClient Http

<FluentLayout>
    <FluentHeader>
        @Loc[ResourceConstants.HomeTitle]
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <ErrorBoundary>
                <ChildContent>
                    <div class="content">
                        @Body
                    </div>
                </ChildContent>
                <ErrorContent Context="ex">
                    <div class="blazor-error-boundary">@ex.Message</div>
                </ErrorContent>
            </ErrorBoundary>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        @* <a href="https://www.fluentui-blazor.net" target="_blank">Documentation and demos</a> *@
        @title
        <FluentSpacer />
        <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank">About Blazor</a>
    </FluentFooter>
    <UpdateAvailableDetector />
</FluentLayout>

@code {
    private string title = "";

    protected override async Task OnInitializedAsync()
    {
        var manifest = await Http.GetFromJsonAsync<Manifest>("/manifest.webmanifest");
        title = $"{manifest?.name} {manifest?.version}";

        // StateHasChanged();
    }

    record Manifest(string version, string name);

}